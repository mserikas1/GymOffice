@page
@model LogoutModel
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]
@{
    ViewData["Title"] = "Log out";
}

<header>
    @{
        if (User != null && User.Identity!.IsAuthenticated)
        {
            <form class="form-inline"
                asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark"><h3>Click here to Logout</h3></button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
